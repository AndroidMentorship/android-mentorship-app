<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.am.fdamilola.bankingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.FirstActivity" />
        <activity
            android:name=".activities.menu.GameTypeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.menu.GameLevelActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_game_level" />

        <activity android:name=".activities.SplashScreen2"
                  android:screenOrientation="portrait"/>
    </application>



</manifest>