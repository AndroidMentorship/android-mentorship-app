<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    tools:context="com.am.fdamilola.bankingapp.activities.MenuActivity"
    tools:ignore="MissingPrefix">

    <Button
        android:id="@+id/single_player_button"
        android:layout_width="354dp"
        android:layout_height="70dp"
        android:background="@drawable/single_player_button"
        android:text="@string/single_player"
        android:textAllCaps="false"
        android:textColor="@color/SPTextColor"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/multi_player_button"
        android:layout_width="354dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/multi_player_button"
        android:text="@string/multi_player"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"/>


</RelativeLayout>
