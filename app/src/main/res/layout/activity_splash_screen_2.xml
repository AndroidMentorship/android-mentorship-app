<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_2_text_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/splash_screen_2_textView_top"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="@string/splash_screen_2_text"
        android:textColor="@color/white"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/splash_screen_2_textView_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:text="@string/splash_screen_2_text_name"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/splash_screen_2_button"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#53CB51"
        android:text="Guess"
        android:textColor="@color/white"/>
</LinearLayout>