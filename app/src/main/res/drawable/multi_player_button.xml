<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="100dp" />
                    <solid android:color="@color/mp_button_shadow" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="0dp">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <gradient android:startColor="@color/mp_button_pink_light"
                        android:centerColor="@color/mp_button_pink_dark"
                        android:endColor="@color/mp_button_pink_lighter"
                        android:type="linear"
                        android:angle="270"/>
                    <corners android:radius="100dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>